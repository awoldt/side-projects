<div class="row">
        <% for(i=0; i<4; ++i) { %>
            <div class="col-sm-3 text-center mb-3">
                <h6><%= marketIndex[1][i].name %></h6>
                <% if(marketIndex[1][i].price > 0) { %>
                    <span style="color: green"><%= marketIndex[1][i].price.toFixed(2) %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-arrow-up" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/></svg>(<%= marketIndex[1][i].changesPercentage.toFixed(2) %>%)</span>
                <% } else { %>
                    <span style="color: red"><%= marketIndex[1][i].price.toFixed(2) %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-arrow-down" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/></svg>(<%= marketIndex[1][i].changesPercentage.toFixed(2) %>%)</span>
                <% } %>
            </div>
        <% } %>
</div>



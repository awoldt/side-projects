<div class="input-group mb-3" style="margin-top: 25px;" id='search-div'>
    <% if(tickerPage == true) { %>
        <a href="/">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16" style="margin-right: 35px;">
                <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
            </svg> 
        </a>
        
    <% } %>
    <input type="text" class="form-control" placeholder="Search any ticker" style="margin-right: 5px;" id="q"> 
    <div>
      <button class="btn btn-outline-secondary" type="button" id="s-btn">Search</button>
    </div>
    

    <script>
        function search() {
            var q = document.getElementById('q');
            q = q.value;
            const url = 'https://simplestockchart.com/' + q;
            location.assign(url);
        }
        const sBar = document.getElementById('q');
        const sBtn = document.getElementById('s-btn');
        sBtn.addEventListener('click', search);
        sBar.addEventListener('keyup', e => {
            if(e.keyCode == 13) {
                search();
            }
        })
    </script>
</div>
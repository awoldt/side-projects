<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.title</title>
    @if (ViewBag.canonical != null)
    {
        <link rel="canonical" href="@ViewBag.canonical" />
    }
    @if (ViewBag.description != null)
    {
        <meta name="description" content="@ViewBag.description" />
    }
    @if (ViewBag.ogTags != null)
    {
        <meta property="og:title" content="@ViewBag.ogTags.Title" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="@ViewBag.ogTags.Url" />
        <meta property="og:image" content="@ViewBag.ogTags.Image" />

    }
    @if (ViewBag.twitterOgTags != null)
    {
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="@ViewBag.twitterOgTags.Title" />
        <meta name="twitter:description" content="@ViewBag.twitterOgTags.Description" />
        <meta name="twitter:image" content="@ViewBag.twitterOgTags.Image" />
    }

    <link rel="stylesheet" href="/css/site.css" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <header style="display: flex; align-items: center">
        <nav class="navbar" id="nav-left">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">DiviDome</a>
        </nav>
        <nav class="navbar" id="nav-right">
            <input class="search" type="search" placeholder="Ticker" id="search_input">
            <script src="/js/search.js"></script>
            </input </nav>
    </header>
    <div class="container-fluid" id="content">
        <main role="main" style="margin-bottom: 10rem;">
            @RenderBody()
        </main>
    </div>
</body>

</html>

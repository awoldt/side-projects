<!DOCTYPE html>
    <%- include('./templates/header') %>
    <%- include('./templates/nav') %>

    <body>
        <div class="container">
            <!-- Alert message -->
            <div class="alert mt-3 <%= alertClass %>" id="alert-div" role="alert">
                <p id="alert-message" class="mb-0"><%= alert %></p>
            </div>
            <form action="/login" method="POST"> 
                <div class="form-group mt-3">
                    <!-- Email -->
                    <input class="form-control mb-2" type="email" placeholder="Email" name="email" required>
                    <!-- Password -->
                    <input class="form-control mb-2" type="password" placeholder="Password" name="password" required>
                    <!-- Submit btn-->
                    <button class="btn btn-primary form-control" type="submit" id="submit-btn">Log in</button>
                </div>
            </form>
            <p id="create-link">Don't have an account? <a href="/signup">Create one</a></p>
        </div>
    </body>
    <script src="/scripts/form.js"></script>
    <script src="/scripts/removeAlert.js"></script>
    <script>
        //no login btn on login page
        document.getElementById('login-btn').remove();
    </script>
</html>
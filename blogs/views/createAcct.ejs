<!DOCTYPE html>
    <%- include('./templates/header') %>
    <%- include('./templates/nav') %>

    <body>
        <div class="container">
            <!-- Alert message -->
            <div class="alert mt-3 <%= alertClass %>" id="alert-div" role="alert">
                <p id="alert-message" class="mb-0"><%= alert %></p>
            </div>
            <h3 class="mt-3 mb-5">Create a free account and write about anything you find interesting.</h3>
            <form action="/signup" method="POST">
                <div class="form-group mt-3">
                    <!-- Email -->
                    <input class="form-control mb-2" type="email" name="email" placeholder="Email" required>
                    <!-- Password -->
                    <input class="form-control mb-2" type="password" name="password" placeholder="Password" onkeyup="strongPassword(this)" id="pass1" required>
                    <!-- Confirmed Password -->
                    <input class="form-control mb-2" type="password" placeholder="Confirm Password" onkeyup="strongPassword(this)" id="pass2" required>
                    <!-- Username -->
                    <input class="form-control mb-2" type="text" name="username" placeholder="Username" required>
                    <button class="btn btn-primary" type="submit" id="submit-btn">Create</button>
                </div>
            </form>
            <p class="text-secondary mt-5">Please review our <a href="/privacy">privacy policy</a> before creating an account</p>
        </div>
    </body>
    <script src="/scripts/removeAlert.js"></script>
    <script src="/scripts/form.js"></script>
    <script>
        //no login btn on signup page
        document.getElementById('login-btn').remove();
    </script>
</html>